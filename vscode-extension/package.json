{
  "name": "wireit-extension",
  "displayName": "wireit",
  "description": "For the wireit script runner",
  "publisher": "todo-register-publisher",
  "version": "0.1.0",
  "contributes": {
    "commands": [],
    "jsonValidation": [
      {
        "fileMatch": "package.json",
        "url": "./schema.json"
      }
    ]
  },
  "main": "./client.js",
  "activationEvents": [
    "onLanguage:json"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build:package",
    "package": "wireit",
    "test": "wireit",
    "test:actual": "wireit",
    "build": "wireit",
    "build:ts": "wireit",
    "build:copy-schema": "wireit",
    "build:bundle": "wireit",
    "watch": "npm run build watch",
    "lint": "wireit",
    "install-extension": "wireit",
    "build:package": "wireit"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "build:package"
      ]
    },
    "build:package": {
      "dependencies": [
        "build:copy-schema",
        "build:bundle"
      ]
    },
    "build:copy-schema": {
      "files": [
        "../schema.json"
      ],
      "output": [
        "./schema.json"
      ],
      "command": "cp ../schema.json ./schema.json"
    },
    "build:ts": {
      "files": [
        "tsconfig.json",
        "src/**/*.ts"
      ],
      "output": [
        "out",
        ".tsbuildinfo"
      ],
      "clean": "if-file-deleted",
      "command": "tsc --build"
    },
    "build:bundle": {
      "files": [
        "src/**/*ts",
        "esbuild.script.mjs"
      ],
      "output": [
        "client.js"
      ],
      "command": "node esbuild.script.mjs"
    },
    "lint": {
      "files": [
        "src/**/*.ts"
      ],
      "output": [],
      "command": "eslint src --ext ts"
    },
    "test": {
      "dependencies": [
        "test:actual",
        "lint"
      ]
    },
    "test:actual": {
      "dependencies": [
        "build"
      ],
      "files": [
        "package.json",
        "schema.json"
      ],
      "output": [],
      "command": "node ./lib/test/scripts/runner.js"
    },
    "package": {
      "dependencies": [
        "build:package"
      ],
      "files": [
        "package.json"
      ],
      "command": "vsce package -o wireit.vsix"
    },
    "install-extension": {
      "dependencies": [
        "package"
      ],
      "#comment": "Useful when manually testing, you can run this in watch mode, and do a > Developer: Reload Window in vscode to pick up the new version of the extension.",
      "command": "code --install-extension wireit.vsix"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lit/wireit.git"
  },
  "author": "Google LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lit/wireit/issues"
  },
  "homepage": "https://github.com/lit/wireit#readme",
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.14.38",
    "jsonc-parser": "^3.0.0",
    "vsce": "^2.7.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.4"
  }
}
